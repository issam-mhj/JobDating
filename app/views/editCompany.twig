<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>YouCode Admin - Modifier Entreprise</title>
		<script src="https://cdn.tailwindcss.com"></script>
		<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
	</head>
	<body class="bg-gray-100">
		<!-- Modal Overlay -->
		<div id="addAnnouncementModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4">
			<!-- Modal Content -->
			<div class="bg-white rounded-lg shadow-xl w-full max-w-2xl">
				<!-- Modal Header -->
				<div class="flex justify-between items-center p-6 border-b">
					<h2 class="text-xl font-bold text-gray-800">Modifier l'Entreprise</h2>
					<button onclick="document.getElementById('addAnnouncementModal').classList.add('hidden')" class="text-gray-500 hover:text-gray-700">
						<i class="fas fa-times text-xl"></i>
					</button>
				</div>

				<!-- Modal Body -->
				<div class="p-6 my-12">
					<form action="/modifyCompany/update" enctype="multipart/form-data" method="POST" class="space-y-6">
						<input type="hidden" name="company_id" value="{{company.id}}">

						<div>
							<label for="company_name" class="block text-gray-700 mb-2">Nom de l'entreprise</label>
							<input type="text" id="company_name" name="company_name" value="{{company.company_name}}" class="w-full p-2 border rounded-lg" required>
						</div>
						<div>
							<label for="number" class="block text-gray-700 mb-2">phone number:</label>
							<input type="tel" id="number" name="number" value="{{company.number}}" class="w-full p-2 border rounded-lg" required>
						</div>
						<div>
							<label for="email" class="block text-gray-700 mb-2">email:</label>
							<input type="email" id="email" name="email" value="{{company.email}}" class="w-full p-2 border rounded-lg" required>
						</div>
						<div>
							<label for="location" class="block text-gray-700 mb-2">location:</label>
							<input type="text" id="location" name="location" value="{{company.location}}" class="w-full p-2 border rounded-lg" required>
						</div>
					<div class="mb-4">
						<label class="block text-gray-700 text-sm font-medium mb-2" for="logo">
						Logo
						</label>
						<input 
							type="file"
							id="logo"
							name="logo"
							class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100"
						>
					</div>
						<div>
							<label for="details" class="block text-gray-700 mb-2">DÃ©tails</label>
							<textarea id="details" name="details" class="w-full p-2 border rounded-lg" required>{{company.details}}</textarea>
						</div>

						<div class="flex space-x-4">
							<button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700">
								Enregistrer
							</button>
							<a href="/Admin/Companies" class="bg-gray-200 text-gray-700 px-6 py-2 rounded-lg hover:bg-gray-300">
								Annuler
							</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</body>
</html>